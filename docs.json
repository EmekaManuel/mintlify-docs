{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "SentinelX404",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "installation", "nextjs-setup"]
          },
          {
            "group": "Features",
            "pages": [
              "features/blacklist",
              "features/timelock",
              "features/multitoken",
              "features/activity",
              "features/tier",
              "features/nodebt",
              "features/age"
            ]
          },
          {
            "group": "Utilities",
            "pages": [
              "utilities/wallet-detection",
              "utilities/geolocation",
              "utilities/wallet-modal"
            ]
          },
          {
            "group": "Server",
            "pages": ["server/setup", "server/deployment"]
          },
          {
            "group": "Examples",
            "pages": [
              "examples/react",
              "examples/typescript",
              "examples/error-handling"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoints/blacklist",
              "api-reference/endpoints/timelock",
              "api-reference/endpoints/multitoken",
              "api-reference/endpoints/activity",
              "api-reference/endpoints/tier",
              "api-reference/endpoints/nodebt",
              "api-reference/endpoints/age"
            ]
          },
          {
            "group": "Types",
            "pages": [
              "api-reference/types/configs",
              "api-reference/types/results"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/sentinelinfra/sentinelx404",
          "icon": "github"
        },
        {
          "anchor": "NPM",
          "href": "https://www.npmjs.com/package/sentinelx404",
          "icon": "npm"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@sentinelx404.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/quickstart"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/sentinelinfra/sentinelx404"
    }
  }
}
